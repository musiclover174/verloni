.news
  &__list
    display flex
    flex-wrap wrap
    justify-content space-between
    pos relative
    ml -60px
    w calc(100% + 60px)
    @media $lDesktopMedium
      ml -40px
      w calc(100% + 40px)
  &__elem
    w calc(50% - 60px)
    ml 60px
    mb 65px
    display flex
    flex-direction column
    align-items flex-start
    justify-content flex-start
    @media $lDesktopMedium
      ml 40px
      w calc(50% - 40px)
      mb 45px
    @media $LandscapeMax
      w calc(100% - 40px)
    &-side
      w 100%
    &-imgover
      db()
      pt 52%
      w 0
      bgc black
      pos relative
      overflow hidden
      transition .7s width
      transition-delay 0s !important
      &.visible
        w 100%
    &-img
      position absolute
      left 0
      top 50%
      opacity .8
      will-change transform
      transition 7s transform, .7s opacity
      transform translate(0, -50%) scale(1.03)
      object-fit cover
      font-family 'object-fit: cover;'
      height 100%
      &:hover
        opacity 1
        transform translate(0, -50%) scale(1)
    &-content
      w 100%
      mt 20px
      pos relative
      opacity 1
      b 0
      transition-delay .8s
      transition .7s opacity, .7s bottom
      @media $lDesktopMedium
        mt 7px
    &-date
      color #888
      fontify 15px 400 17px
      mt 18px
      @media $lDesktopMedium
        fontify 13px 400 21px
        mt 12px
      @media $LandscapeMax
        mt 7px
    &-href
      color black
      fontify 48px 700 54px
      border-bottom 1px solid alpha(black, 1)
      transition .5s border, .5s color
      @media $lDesktopMedium
        fontify 31px 700 37px
      @media $desktopMedium
        fontify 26px 700 30px
      span
        pos relative
        t 11px
        @media $lDesktopMedium
          t 7px
        @media $desktopMedium
          t 5px
      &:hover
        border-color transparent
        color $red
    &-text
      fontify 18px 400 26px
      mt 44px
      max-width 720px
      @media $lDesktopMedium
        fontify 15px 400 23px
        mt 31px
      @media $desktopMedium
        mt 20px
  &__inner
    pos fixed
    h 0
    bottom 0
    l 0 
    r 0
    overflow hidden
    bgc white
    transition .7s height
    &-content
      max-width 1000px
      margin 0 auto
      padding 155px 20px 80px
      pos relative
      t -20px
      opacity 0
      transition .7s opacity, .7s top
      @media $lDesktopSmall
        max-width 800px
    &-title
      color black
      fontify 48px 700 52px
      @media $lDesktopSmall
        fontify 39px 700 43px
    &-date
      color #888
      fontify 15px 400 17px
      mt 15px
      mb 38px
      @media $lDesktopSmall
        fontify 13px 400 15px
    &-prevtext
      color black
      fontify 24px 400 32px
      mb 20px
      @media $lDesktopSmall
        fontify 21px 400 29px
  &__close
    pos fixed
    z-index 1
    size 31px
    t 50px
    r 50px
    cursor pointer
    background url("data:image/png;base64,") no-repeat center
    opacity 0
    transition .7s background, .7s transform, .7s opacity
    @media $PortraitMax
      r 30px
      t 30px
    &:hover
      background url("data:image/png;base64,") no-repeat center
      transition-delay 0s !important
      transform rotate(360deg)
  &__tonext,
  &__toprev 
    pos absolute
    t 50%
    size 80px 170px
    mt -85px
    z-index 10
    cursor pointer
    bgc transparent
    outline none
    background url('../i/arleft.png') no-repeat center
    transition .7s opacity
    @media $LandscapeMax
      dn()
    &:before
      content ""
      pos absolute
      t 70px
      size 12px 22px
      background url("data:image/png;base64,") no-repeat center
      transition .7s background
    &:hover:before
      background url("data:image/png;base64,") no-repeat center
    &.disabled
      opacity .1 !important
  &__toprev
    transform scaleX(-1)
    l 0
    opacity 0
    transition .7s opacity
    &:before
      l 47px
  &__tonext
    r 0
    opacity 0
    transition .7s opacity
    &:before
      l 48px
      
html.newsopen
  overflow hidden
  .news__toprev,
  .news__tonext,
  .news__close
    opacity 1
    transition-delay 1s
  .news__inner
    height 100%
    overflow auto
    @media $desktopMedium
      z-index 12
  .news__inner-content
    opacity 1
    t 0px
    transition-delay 1.3s
    @media $desktopMedium
      padding 40px 20px
    @media $LandscapeMax
      pt 100px